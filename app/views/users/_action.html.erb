<% unless user.admin? %>
  <% if user.confirmed? %>
    <%= link_to t(".ban"), active_user_path(user, {confirmed: false}), data: { "turbo-method": :post, turbo_confirm: t(".confirm") } ,class: "text-red-600 hover:underline" %>
  <% else %>
    <%= link_to t(".activate"), active_user_path(user, {confirmed: true}), data: { "turbo-method": :post, turbo_confirm: t(".confirm") }, class: "text-green-600 hover:underline" %>
  <% end %>
<% end %>
